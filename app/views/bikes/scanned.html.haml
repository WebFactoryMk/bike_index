.receptacle.overfloating
  .inner-recep
    %h1
      #{t('bikes.ohno-card')}
    %article
      %h3
        #{t('bikes.tell-us-connect')}
    
    = form_for @feedback do |f|
      - if @feedback.errors.any?
        #alert-block
          .alert.alert-error
            %a.close{"data-dismiss" => "alert"} Ã—
            %h4
              #{t('organization.please-fix')}
              = "#{t('common.errors', :count => @feedback.errors.count)}"
            %ul
              - @feedback.errors.full_messages.each do |msg|
                %li 
                  = msg  

      .feedbacks.padded
        .contact-info
          = f.hidden_field :name, value: "spoke card connect"
          = f.hidden_field :feedback_type, value: 'spokecard'
          = f.email_field :email, required: true, placeholder: "#{t('bikes.enter-your-mail')}", value: current_user ? current_user.email : ""
          = f.hidden_field :title, value: @card_id
        .contact-text
          - if current_user.present? && current_user.bikes.any?
            = f.text_area :body, placeholder: "#{t('bikes.bike-url')}", rows: 7, value: "#{t('bikes.id-like-connect')} \n\nhttps://bikeindex.org/bikes/#{current_user.bike_ids.first}"
          - else
            = f.hidden_field :body, value: 'not logged in'
        .feedback-actions.control-group
          = f.submit "#{t('common.Submiti'}!", class: 'button-green pull-right'
        