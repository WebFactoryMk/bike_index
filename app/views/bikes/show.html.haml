- if current_user.present? and @bike.can_be_claimed_by(current_user)
  - claim_bike_body = capture_haml do
    .modal-body
      %p
        #{t('bikes.were-honored')} #{@bike.type} #{t('bikes.on-index')}
      %p
        #{t('bikes.claim-it')}
    .modal-btn-footer
      .row
        .col-xs-6.col-xs-push-3
          %a.btn.btn-success{ href: "/ownerships/#{@bike.current_ownership.id}" }
            #{t('bikes.claim')} #{@bike.type}

  = render partial: '/shared/modal', locals: { title: "Your #{@bike.type}", id: 'claim-bike-modal', modal_body: claim_bike_body }
- elsif @bike.owner == current_user
  .bike-edit-overlay
    - if @bike.user_hidden
      %p
        %strong
          #{t('bikes.bike-hidden')}
        
        #{t('bikes.noone-can-see')}
    %p
      - if @bike.current_owner_exists
        - if @bike.recovered
          #{t('bikes.thankyou-for')} #{@bike.type}!
        - elsif @bike.stolen
          #{t('bikes.really-bummed')} #{@bike.type} #{t('bikes.was-stolen')}
        - else
          #{t('bikes.woah-awesome')} #{@bike.type} #{t('bikes.is-yours')}

        - if @bike.public_images.any?
          #{t('bikes.add-some-info')}
        - else
          - if @bike.stolen
            #{t('bikes.add-a-pic')}
          - else
            #{t('bikes.add-a-pic1')}
      - elsif @bike.current_ownership
        #{t('bikes.you-sent-bike')}
        %em
          = @bike.current_ownership.owner_email
        #{t('bikes.but-not-claimed')}
      = link_to  "#{t('common.Edit')}", edit_bike_path, class: 'btn btn-secondary'

/ Caching should go here:
/ - cache(@bike) do
.container
  .row
    .col-md-8
      %h1
        - if @bike.stolen
          - stolen_type = @bike.recovered ? "#{t('common.recovered')}" : "#{t('common.stolen')}"
          %strong.stolen
            = "Recovered" if @bike.recovered
            #{t('common.Stolen')}
        = @bike.title_u
      - if @bike.stolen && @stolen_record.present?
        %p
          %strong
            - if @bike.recovered
              #{t('common.Recovered')}
            - else
              #{t('common.last-seen')}
          = l @stolen_record.date_stolen, format: :dotted
          %strong
            #{t('common.at')}
          = @stolen_record.show_stolen_address

      - if @bike.should_show_other_bikes
        %h4
          = link_to "#{t('organized.view-other-reg')}", user_path(@bike.owner.username)
    .col-md-4.ad-col
      .ad-block#top468x60
  .row
    / Bike Photo!
    .col-md-8
      .bike-photos.horizontal-thumbnails
        - if @bike.public_images.any?
          #selected-photo{ class: "image-holder #{"just1photo" if @bike.public_images.count == 1}" }
            .current-photo{ id: "image#{@bike.public_images.first.id}"}
              = image_tag(@bike.public_images.first.image_url(:large), alt: "#{@bike.type.titleize} photo", id: "i|#{@bike.public_images.first.listing_order}", data: { action: 'zoom', original: @bike.public_images.first.image_url })
          - if @bike.public_images.count > 1
            %span.thumbnail-shadow
            %span.thumbnail-shadow-r
            #thumbnail-photos.photo-list
              %ul#thumbnails
                - @bike.public_images.each_with_index do |public_image, index|
                  - thumb_class = index == 0 ? 'current-thumb' : '' # make the first image current
                  %li
                    %a.clickable-image{ class: thumb_class, data: { id: "image#{public_image.id}", img: public_image.image.url(:large), link: public_image.image.url } }
                      = image_tag public_image.image.url(:small), alt: "#{public_image.name}", id: "i|#{public_image.listing_order}"
            :plain
              <script id="current-photo-template" type="x-tmpl-mustache">
                <div id="{{id}}" style="display: none;">
                  <img alt="{{alt}}" src="{{src}}" id="{{image_id}}" data-action="zoom" data-fullsize="{{fullsize}}" class="initially-hidden">
                </div>
              </script>
        - elsif @bike.stock_photo_url.present?
          #selected-photo.image-holder.just1photo
            %h3.stock-photo
              #{t('organized.stock-photo')} #{@bike.year} #{@bike.frame_model}
              %em
                #{t('organized.color-not-match')}
            .current-photo#stock_photo_img
              = image_tag(@bike.stock_photo_url, alt: "#{@bike.type.titleize} photo", id: "i|0", data: {action: 'zoom', original: @bike.stock_photo_url})

      .show-bike-details
        %ul.attr-list.split-sm
          = @bike.attr_list_item(@bike.serial_display, "#{t('common.Serial')}", with_colon: true)
          - unless @bike.recovered
            = @bike.attr_list_item(@bike.additional_registration, "#{t('organized.other-serial-reg')}", with_colon: true)
          - unless @bike.type == 'bike'
            = @bike.attr_list_item(@bike.type.titleize, "#{t('bikes.cycle-type')}", with_colon: true)
          = @bike.attr_list_item(@bike.mnfg_name, "#{t('common.Manufacturer')}", with_colon: true)
          = @bike.attr_list_item(@bike.frame_model, "#{t('common.Model')}", with_colon: true)
          = @bike.attr_list_item(@bike.year.to_s, "#{t('common.Year')}", with_colon: true)
          = @bike.attr_list_item(@bike.frame_colors.to_sentence, "#{t('bikes.primary-colors')}", with_colon: true)
          = @bike.attr_list_item(@bike.frame_size, "#{t('bikes.frame-size')}", with_colon: true)
          - if @bike.front_wheel_size_id.present?
            - front_tire_width = @bike.front_tire_narrow ? "(#{t('bikes.narrow-tire')})" : "(#{t('bikes.wide-tire')})"
            - if @bike.front_wheel_size_id == @bike.rear_wheel_size_id
              = @bike.attr_list_item(@bike.ass_name('front_wheel_size', front_tire_width), "#{t('bikes.wheel-diam')}", with_colon: true)
            - else
              = @bike.attr_list_item(@bike.ass_name('front_wheel_size', front_tire_width), "#{t('bikes.front-wheel-diam')}", with_colon: true)
              - rear_tire_width = @bike.rear_tire_narrow ? "(#{t('bikes.narrow-tire')})" : "(#{t('bikes.wide-tire')})"
              = @bike.attr_list_item(@bike.ass_name('rear_wheel_size', rear_tire_width), "#{t('bikes.rear-wheel-diam')}", with_colon: true)
          = @bike.attr_list_item(@bike.ass_name('frame_material'), "#{t('bikes.frame-material')}", with_colon: true)
          = @bike.attr_list_item(@bike.ass_name('handlebar_type'), "#{t('bikes.handlebar-type')}", with_colon: true)
        - if @bike.description.present?
          %h3
            #{t('bikes.distinct-feature')}
          %p
            = @bike.description
        - if @bike.stolen && @stolen_record.present?
          %h3
            #{@bike.recovered ? "#{t('common.Recovery')}" : "#{t('common.Theft')}"} #{t('common.Details')}
          .row
            = render 'stolen_map'
            .col-md-4
              %ul.attr-list.separate-lines
                = @bike.attr_list_item(@stolen_record.show_stolen_address, "#{t('common.Location')}")
                = @bike.attr_list_item(@stolen_record.locking_description, "#{t('bikes.locking-desc')}")
                = @bike.attr_list_item(@stolen_record.lock_defeat_description, "#{t('bikes.locking-circ')}")
                = @bike.attr_list_item((l @stolen_record.date_stolen, format: :dotted), "#{t('common.Date')} #{stolen_type}") # stolen_type defined at start of document
                = @bike.attr_list_item(@stolen_record.police_report_number, "#{t('bikes.police-report')} #")
                = @bike.attr_list_item(@stolen_record.police_report_department, "#{t('bikes.depart-city')}")
          - if @stolen_record.theft_description.present?
            %h3
              #{t('bikes.desc-incident')}
            %p
              = @stolen_record.theft_description

    
      - cgroups = @bike.cgroup_array.map { |id| { name: Cgroup.find(id).name, id: id } }
      - if cgroups.any?
        %ul.nav.nav-tabs.component-types{ role: 'tablist' }
          - cgroups.each_with_index do |cgroup, index|
            %li.nav-item
              - link_class = index == 0 ? 'active' : ''
              %a.nav-link{ class: link_class, href: "#cgroup_#{cgroup[:id]}", data: { toggle: 'tab', role: 'tab' } }
                = cgroup[:name]
        .tab-content.component-group-wrap
          - cgroups.each_with_index do |cgroup, index|
            - tab_class = index == 0 ? 'active' : ''
            .tab-pane.component-group{ id: "cgroup_#{cgroup[:id]}", class: tab_class }
              %h3.cgroup-name
                = cgroup[:name]
              %ul.attr-list
                - @components.each do |component|
                  - next unless component.cgroup_id == cgroup[:id]
                  %li
                    %span.attr-title
                      - if component.front && component.rear
                        #{t('common.Front')} & #{t('common.Rear')}
                      - elsif component.front
                        #{t('common.Front')}
                      - elsif component.rear
                        #{t('common.Rear')}
                      - if component.component_type == "unknown"
                        #{t('common.Other')}
                      - else
                        = component.component_type.titleize if component.component_type.present?
                    = component.description
                    - if component.year.present? ||  component.cmodel_name.present? || component.manufacturer.present?
                      #{component.cmodel_name}
                      = "#{component.year}" if component.year.present?
                      (#{component.manufacturer_name})
    .col-md-4
      .social-share-bike
        %h4
          - if @bike.stolen
            #{t('customer-mailer.spread-word')}
          - else
            #{t('bikes.share-it')}!
        = render '/shared/share_this'
      - if @bike.stolen && @stolen_record.present?
        .contact-the-owner
          %p.preface
            %em
              #{t('bikes.know-something')} #{@bike.type}?
          %h3
            #{t('bikes.contact-owner')}
          - if @bike.recovered
            %p
              #{t('bikes.this-your-bike')}
          - redirect = new_session_url(return_to: "/bikes/#{@bike.id}?contact_owner=true") unless current_user.present?
          #write_them_a_message.collapse{ class: ('in' unless @contact_owner_open), data: { redirect: redirect } }
            %a.btn.btn-primary.btn-lg{ href: '#new_stolen_message', 'aria-controls' => 'new_stolen_message', 'data-toggle' => 'collapse' }
              #{t('bikes.write-msg')}

          .collapse#new_stolen_message{ class: ('in' if @contact_owner_open) }
            = form_for @stolen_notification do |f|
              = f.hidden_field :bike_id, value: @bike.id
              = f.text_area :message, required: true, placeholder: "#{t('bikes.where-see')} #{@bike.type}? #{t('bikes.if-contact')}", rows: 6, class: 'form-control'
              = f.text_field :reference_url, placeholder: 'Link url', class: 'form-control additional-field'

              .send-message
                = f.submit "#{t('bikes.send-msg')}", class: 'btn btn-primary btn-lg'
          - if @bike.phoneable_by(current_user)
            %p.phoneable-by
              %em
                #{t('bikes.or-call')}
              %strong
                #{t('bikes.owner-phone')}:
              %a{ href: "tell:#{@stolen_record.phone}" }
                = @stolen_record.phone_display
      .ad-block#right300x600
