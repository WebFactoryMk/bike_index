%section.full-screen-table
  %table#user-bikes-table.table.table-striped.table-bordered
    %thead
      %th
        #{t('users.date-indexed')}
      %th
        #{t('common.Manufacturer')}
      %th.medium-screens
        #{t('common.Model')}
      %th.large-screens
        #{t('common.Color')}&nbsp;&nbsp;
      %th.large-screens
        #{t('bikes.created-by')}

    %tbody
      - pdf ||= false
      - @bikes.each do |bike|
        %tr
          %td
            .less-strong-hold
              - if bike.created_at.today?
                %span.hidden
                  = bike.created_at.strftime("%-m.%-d.%Y %-H.%M")
                #{t('users.today-at')} #{bike.created_at.strftime("%-I %p")}
              - elsif Date.yesterday().beginning_of_day() <= bike.created_at
                %span.hidden
                  = bike.created_at.strftime("%-m.%-d.%Y %-H.%M")
                #{t('users.yesterday-at')} #{bike.created_at.strftime("%-I %p")}
              - else
                %span.hidden
                  = bike.created_at.strftime("%-m.%-d.%Y %-H.%M")
                = bike.created_at.strftime("%-m/%-d/%Y")
              - if pdf
                = link_to "pdf", pdf_bike_url(bike), class: 'less-strong-right'
              
          %td
            = link_to bike.mnfg_name, bike.list_link_url(target)
          %td.large-screens
            = bike.frame_model if bike.frame_model.present?
          %td.large-screens
            = bike.primary_frame_color.name
          %td.large-screens
            - if bike.creator_id.present?
              - u = User.find(bike.creator_id)
              - if u.name.present?
                = u.name
              - else
                = u.email
            - else
              #{t('bikes.sorry-not-sure')}
