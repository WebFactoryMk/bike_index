.col-md-6
  %fieldset.card
    .card-block
      .row
        .col-sm-6
          .form-group
            = f.label :name, "#{t('organized.location-name')}"
            = f.text_field :name, placeholder: "#{t('common.Name')}", required: true, class: 'form-control location-name-field'
        .col-sm-6
          .form-group
            = f.label :phone, "#{t('organized.phone-no')}"}
            = f.text_field :phone, class: 'form-control'

      .form-group.address-group
        = f.label :street, "#{t('common.Address')}"
        = f.text_field :street, placeholder: "#{t('common.Street')}", class: 'form-control'
        = f.text_field :city, required: true, placeholder: "#{t('common.City')}", class: 'form-control'
        .row.countrystatezip
          .col-sm-4.location-country-select.fancy-select.unfancy
            = f.collection_select(:country_id, Country.all, :id, :name, prompt: "#{t('organized.choose-country')}")
          .col-sm-4.fancy-select.unfancy
            = f.collection_select(:state_id, State.all, :id, :name, prompt: "#{t('common.State')}", include_blank: true )
          .col-sm-4
            = f.text_field :zipcode, placeholder: "#{t('common.Zipcode')}", class: 'form-control'

      .remove-control
        = f.check_box :_destroy
        = f.label :_destroy, "#{t('common.Remove')}"}, class: 'remove_fields'

