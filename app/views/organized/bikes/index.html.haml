.organized-page-header
  %h1
    %em
      = current_organization.name
    #{t('common.bikes')}
  %p
    %strong
      #{ t('common.bikes', :count => @bikes_count) }
    #{t('common.registered-plural', :count => @bikes_count)}

.organized-bikes-table.table-responsive
  %table.table.table-striped.table-hover.table-bordered.table-sm.without-exterior-border
    %thead.small-header
      %tr
        %th.date-added #{t('organized.date-added')}
        %th #{t('common.Manufacturer')}
        %th #{t('common.Model')}
        %th #{t('common.Color')}
        %th #{t('shared.edit_bike.sent-to')}
        / %th View PDF
    %tbody
      - @bikes.each do |bike|
        %tr
          %td
            = link_to l(bike.created_at, format: :dotted), bike_path(bike)
          %td
            = bike.mnfg_name
          %td
            = bike.frame_model
            - if bike.origin
              %small.less-string
                = bike.origin
          %td
            = bike.frame_colors.to_sentence
          %td
            = bike.first_owner_email
            - unless bike.owner_email == bike.first_owner_email
              %small.less-strong
                #{t('organized.sent-to-new')}
          / %td
- unless current_organization.is_paid
  .paginate-container.paginate-container-bottom
    = paginate @bikes