.organized-page-header
  %h1
    #{t('organized.Manage-Users')}
  %p
    #{t('organized.You-have-added')}
    %strong
      #{ t('common.users', :count => current_organization.users.count) }
  %p
    #{t('organized.and-can-add')}
    %strong
      #{current_organization.available_invitation_count} #{t('common.more')}.
    = link_to "#{t('organized.invite-another')}", new_organization_user_path(organization_id: current_organization.to_param)
  %p
    - if current_organization.auto_user.present?
      #{t('organized.emails-are-currently')} <em>#{current_organization.auto_user.email}</em>. #{ link_to "#{t('organized.update-email')}", organization_manage_index_path(organization_id: current_organization.to_param) }

.organized-table
  %table.table.table-striped.table-bordered
    %thead
      %th
        #{t('common.Name')}
      %th
        #{t('common.Email')}
      %th
        #{t('organized.date-added')}
      / %th
      /   Total indexed
    %tbody
      - @memberships.each do |membership|
        %tr
          %td
            = link_to membership.user.name, edit_organization_user_path(membership.id, organization_id: current_organization.to_param)
          %td
            = membership.user.email
          %td
            = l membership.created_at, format: :short_with_year
          / %td.medium-screens
          /   = @bikes.where(creator_id: membership.user.id).count if @bikes.present?
      - @organization_invitations.each do |organization_invitation|
        %tr
          %td
            = link_to organization_invitation.invitee_name, edit_organization_user_path(organization_invitation.id, is_invitation: true, organization_id: current_organization.to_param)
          %td
            = organization_invitation.invitee_email
          %td
            %strong
              #{t('organized.hasnt-signup')}
            %br
            %small
              #{t('common.invited')} #{l organization_invitation.created_at, format: :short_with_year}
          %td
          / %td
