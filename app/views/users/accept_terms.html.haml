.container
  %section.content
    .receptacle
      .inner-recep.legal-content
        :markdown
          #{render partial: '/info/terms_text'}

  .accept-vendor-terms

    = form_for @user, html: { class: 'form' } do |f|

      .form-group
        %label{ for: 'user_terms_of_service', class: 'center-accept-terms-text' }
          = f.check_box :terms_of_service
          #{t('users.i-agree-to-bi')}
          %strong
            #{t('users.terms-of-service')}
      .agree-action
        = f.submit "#{t('common.Submit')}", class: 'btn btn-primary btn-lg center-accept-terms-button'