= form_for @public_image do |f|
  - if @public_image.errors.any?
    #alert-block
      .alert-error
        %a.close{ herf: "#", data: {dismiss: "alert"}}
          x
        %h4
          #{t('common.Errors', :count => @public_image.errors.count)} #{t('public-images.prevented-from-saving')}
        %ul
          - @public_image.errors.full_messages.each do |msg|
            %li
              = msg

  %section.padded
    .form
      .control-group.padded
        = f.label :name, "#{t('public-images.image-name')}", class: "control-label"
        .controls
          = f.text_field :name
      .clearfix
        .alert.alert-notice
          %p
            #{t('public-images.use-this')}
          .control-group.padded
            = f.label :is_private, class: "control-label" do 
              #{t('public-images.dont-display')}
              %em
                #{t('public-images.noone-will-see')}
              .controls
                = f.check_box :is_private
    .bibox-btn.padded
      = f.submit "#{t('public-images.save-image')}", class: "button-green"
      = link_to "#{t('public-images.cancel-update')}", edit_bike_url(@public_image.imageable), class: "button-red"
