!!!
%html
  = render 'shared/header'
  
  - body_class = "welcome-page" if current_page?(root_path) and controller_name == "welcome"
  - body_class = "vendor-signup-page" if current_page?(:vendor_signup)
  - body_class = "news-page" if controller_name == "news"
  %body#body{ class: body_class }
    = render 'layouts/messages'

    #content-wrap.header-closed
      %header.global-header.collapsible-head.invisibled#header
        = render 'shared/header_nav'

      %a#nav-header-collapse.expandable
        %span.e +
        %span.c -


      %header.content-sidebar#content-menu
        .header-content
          .logo
            %a.follow-link.logo{ href: root_path }
              = image_tag "logo.svg"
              %h2
                #{t('shared.header.title')}
        %nav.content-nav
          %ul.content-sections{ class: "#{@active_section}_menu"}
            %li{ class: content_nav_class("about") }
              = active_link "#{t('common.About')}<span> #{t('layouts.content.the-bike-index')}</span>", about_path
              %ul
                %li
                  = active_link "#{t('layouts.content.bi-news')}", news_index_path, match_controller: true
                %li
                  = active_link "#{t('layouts.content.bi-partner-organizations')}", where_path

            %li{ class: content_nav_class("resources") }
              = active_link "#{t('common.Resources')}", resources_path
              %ul
                %li
                  = active_link "#{t('layouts.content.protect-your-bike')}", protect_your_bike_path
                %li
                  = active_link "#{t('layouts.content.info-serial')}", serials_path
                %li
                  = active_link "#{t('layouts.content.list-manufacturers')}", manufacturers_path
                %li
                  = active_link "#{t('layouts.content.images-assets')}", image_resources_path
                      
            %li.contact-nav-btns{ class: content_nav_class("contact") }
              = active_link "#{t('common.Help')}", help_path
              %ul
                %li
                  = active_link "#{t('common.Contact')}", help_path(anchor: 'contact_us_section')
                %li
                  = active_link "#{t('layouts.content.signup-shop-org')}", vendor_signup_path
                / %li
                /   = active_link "Lightspeed Retail integration", lightspeed_integration_path
                

      #content-top-margin
      %section.page-content
        = yield
        
      = render 'shared/footer'