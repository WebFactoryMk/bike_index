.top-user-nav
  %ul
    - if current_user.present?
      %li.first-link
        = link_to "#{t('common.Logout')}", session_path, method: :delete, class: 'low-priority'
      %li.double-width
        = link_to "#{t('layouts.application.your-bikes')}", '/user_home'
      - if current_user.memberships.any?
        - current_user.memberships.each do |membership|
          %li
            %a{ href: "/organizations/#{membership.organization.slug}" }
              = membership.organization.short_name
      - if current_user.admin_authorized('any')
        %li
          = link_to "#{t('common.Admin')}", user_root_url

    - else
      %li.first-link
        %a{href: new_session_url }
          #{t('common.Login')}
      %li
        %a{ href: new_user_url }
          #{t('common.Signup')}
          
    / %li
    /   %a{ href: '#' }
    /     How it works

    %li
      %a.low-priority{ href: about_url }
        #{t('common.About')}

    %li
      %a.low-priority{ href: news_index_url }
        #{t('common.News')}