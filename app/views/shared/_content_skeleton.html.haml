.container
  .row
    / Unless one of the whitelisted pages, wrap it in .legacy-content-wrap
    - additional_class = %w().include?(content_page_type) ? '' : 'legacy-content-wrap'
    .col-md-8.primary-content-block{ class: additional_class }

      = yield
    .col-md-4.primary-content-menu
      %nav.content-nav-group
        %h3
          Related
        %ul
          - if content_page_type == 'news'
            %li
              = active_link "#{t('layouts.content.bi-news')}", news_index_path
          %li
            = active_link "#{t('common.About')}", about_path
          - unless content_page_type == 'news'
            %li
              = active_link "#{t('common.Forum')}", discuss_url
            %li
              = active_link "#{t('common.Help')}", help_url
            %li
              = active_link "#{t('common.Where')}", where_path
            - if %w(manufacturers where).include?(content_page_type)
              %li
                = active_link "#{t('shared.content.signup-organization')}", new_organization_path

      %nav.content-nav-group
        %h3
          Other pages
        %ul
          %li
            = active_link "#{t('layouts.content.bi-news')}", news_index_path
          %li
            = active_link "#{t('shared.content.protect-bike')}", protect_your_bike_path
          - if %w(news about manufacturers).include?(content_page_type)
            %li
              = active_link "#{t('common.Donate')}", support_the_index_path
          - if %w(news serials manufacturers).include?(content_page_type)
            %li
              = active_link "#{t('shared.content.bi-storeorganization')}", shop_path
          %li
            = active_link "#{t('shared.content.design-resources')}", dev_and_design_path
          %li
            = active_link "#{t('shared.content.signup-organization')}", new_organization_path

      .ad-block#right300x600