- if current_user.present?
  .alert.alert-warning.padded
    %p
      #{t('organization.your-current-account')} (<strong>#{current_user.email}</strong>) #{t('organization.will-be-a-member')}.
    %p
      #{t('organization.if-you-dont')}, #{link_to "#{t('common.log-out')}", session_path(redirect_location: 'new_user'), method: :delete} #{t('organization.and-signup')}
  / - if current_user.memberships.count == 1
  - if current_user.memberships.count > 0
    - org = current_user.organizations.first
    %h3.padded
      #{t('organization.youre-already')} of #{link_to org.name, organization_url(org.slug)}.
    %p.padded
      %a.collapsed{ href: "#org-add-panel", data: { toggle: "collapse"} }
        #{t('common.Click-here')}
      #{t('organization.if-you-would-like')}

  #org-add-panel{ class: ('collapse' if org.present?) }
    = form_for @organization, html: { class: 'organized-form' } do |f|

      - if @organization.errors.any?
        #alert-block
          .alert.alert-error
            %a.close{"data-dismiss" => "alert"} Ã—
            %h4
              Please fix the following
              = "#{t('common.errors', :count => @organization.errors.count)}"
            %ul
              - @organization.errors.full_messages.each do |msg|
                %li 
                  = msg
      .card
        .card-block
          %h3.card-title
            #{t('organization.new-org')}
          .form-group.row
            = f.label :name, "#{t('organization.org-name')}", class: 'org-form-label'
            .col-sm-4
              = f.text_field :name, required: true, class: 'form-control'

          .form-group.row
            = f.label :website, class: 'org-form-label'
            .col-sm-4
              = f.text_field :website, class: 'form-control'

          .form-group.row
            %label.org-form-label
              Organization type
            .col-sm-4
              .radio
                %label
                  = f.radio_button :org_type, 'shop'
                  #{t('organized.Bike-shop')}
              .radio
                %label
                  = f.radio_button :org_type, 'advocacy'
                  #{t('organized.Advocacy-group')}
              .radio
                %label
                  = f.radio_button :org_type, 'police'
                  #{t('organized.Police-department')}
              .radio
                %label
                  = f.radio_button :org_type, 'college'
                  #{t('organized.college')}
              .radio
                %label
                  = f.radio_button :org_type, 'manufacturer'
                  #{t('common.Manufacturer')}
          .form-group.row
            .col-sm-4.col-sm-push-4
              = f.submit "#{t('')}", class: 'btn btn-success'
- else
  .alert.alert-info.padded
    %p
      #{t('organization.youll-first')}
    %p
      #{t('organization.after-you')}
  = link_to "#{t('organization.create-org')}", new_user_url(return_to: '/organizations/new' ), class: 'button-blue call-to-action-new-org text-center'

