.container
  %header.with-subtitle
    %h1
      #{t('locks.edit-lock')}
    %p
      = link_to("#{t('locks.back-to')}", user_home_path(active_tab: 'locks'))


  = render partial: "form"

  .form-group.destroy-button
    = button_to "#{t('locks.delete')}", { action: 'destroy', id: @lock}, method: :delete, data: { confirm: "#{t('public-images.are-you-sure')}" }, class: 'btn btn-danger btn-lg '
